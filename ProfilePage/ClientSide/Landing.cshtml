@section stylesheets {
    <style>
               .popover {
            text-decoration: none;
            color: black;
            position: absolute;
            left: 100%;
            top: 0;
            display: block;
            padding: 0px 20px;
            border-color: #755037;
            border-width: 2px 2px 2px 2px;
        }

        .popover-title {
            display: block;
            border-color: #B1A18F;
            border-width: 3px 3px 3px 3px;
            background-color: white;
        }

        .popover.bottom .arrow:after {
            border-bottom-color:  #755037;
        }


        .skillTag {
            background-color: #755037;
            border: none;
            color: white;
            padding: 7px 7px;
            border-radius: 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 13px;
            margin: 3px;
        }

        .image {
            width: 200px;
            height: 200px;
            border-radius: 50%; /*don't forget prefixes*/
            background-position: center center;
            /* as mentioned by Vad: */
            background-size: cover;
            cursor: pointer;
        }

        .pester {
            border-style: outset;
            background-color: white;
        }

        .name {
        }

        .green {
            color: #17b74d;
        }

        .panel-heading {
            cursor: pointer;
            z-index: -3;
        }
    </style>
}

