    <script src="~/Scripts/sabio/sabio.services.people.js"></script>
    <script src="~/Scripts/sabio/core/services/sabio.services.peoplefactory.js"></script>
    <script src="~/Scripts/sabio/core/controllers/sabio.controllers.peoplemanage.js"></script>
    <script src="~/Scripts/sabio/sabio.services.fileUpload.js"></script>
    <script src="~/Scripts/sabio/core/directives/sabio.directive.education.js"></script>
    <script src="~/Scripts/sabio/core/directives/sabio.directive.skilltags.js"></script>
    <script src="~/Scripts/sabio/core/directives/sabio.directive.workHistory.js"></script>
    <script src="~/Scripts/sabio/sabio.services.user.js"></script>
    <script src="~/Scripts/sabio/core/services/sabio.services.userFactory.js"></script>
    <script type="text/javascript">

        // LANDING CONTROLLER
        (function () {
            "use strict";

            angular.module('sabioApp')
            .controller('landingController', LandingController);

            LandingController.$inject = ['$scope', '$baseController', '$landingService', '$fileUploadService', '$sce', 'toastr', '$userService'];

            function LandingController($scope, $baseController, $landingService, $fileUploadService, $sce, $toastr, $userService, ngImgCrop) {
                var vm = this;

                vm.$scope = $scope;
                $baseController.merge(vm, $baseController);
                vm.$landingService = $landingService;
                vm.$userService = $userService;


                //Image
                vm.$fileUploadService = $fileUploadService;
                vm.ngImgCrop = ngImgCrop;
                vm.Image = "";
                vm.CroppedImage = "";
                vm.userFiles = null;
                vm.getFilesSuccess = _getFilesSuccess;
                vm.editPic = _editPic;
                vm.file = {};
                vm.picUrl = "";

                vm.item = null;

                vm.personCheck = _personCheck;
                vm.getInfoSuccess = _getInfoSuccess;

                vm.personId = sabio.page.personId;

                vm.skipAbout = _skipAbout;
                vm.skipEd = _skipEd;
                vm.skipWork = _skipWork;
                vm.skipSkills = _skipSkills;
                vm.editPerson = _editPerson;
                vm.editAbout = _editAbout;
                vm.addWorkHistory = _addWorkHistory;
                vm.addEducation = _addEducation;
                vm.addSkills = _addSkills;
                vm.notify = vm.$landingService.getNotifier($scope);
                vm.searchUser = _searchUser;
                vm.searchQuery = null;
                vm.getSearchSuccess = _getSearchSuccess;

                render();

                function render() {
                    vm.$landingService.getByPersonId(vm.personId, vm.getInfoSuccess);
                    vm.$fileUploadService.getByPersonId(sabio.page.personId, vm.getFilesSuccess);
                }

                //image section
                function _getFilesSuccess(data, textStatus, jqXHR) {
                    vm.notify(function () {
                        vm.userFiles = data.items;
                        if(data.items){
                            console.log(vm.userFiles);
                            for (var i = 0; i < vm.userFiles.length; i++) {
                                if (vm.userFiles[i].fileUrl.substring(0, 14) == "ProfilePicture") {
                                    vm.picUrl = "https://sabio-training.s3-us-west-2.amazonaws.com/C30/" + vm.userFiles[i].fileUrl;
                                    console.log(vm.picUrl);
                                    break;
                                } else {
                                    vm.picUrl = "/public-assets/images/people/defaultAvatar.jpg"
                                }
                        }
                    }});

                }

                function _editPic() {
                    location.href = "/profile/picture"
                }

                angular.element(document.querySelector('#fileInput')).on('change', vm.handleFileSelect);
                //end image section


                function _personCheck() {
                    if (vm.personId == 0 || vm.personId == undefined)
                        return false;
                    else {
                        return true;
                    }
                }

                function _getInfoSuccess(data, textStatus, jqXHR) {
                    vm.notify(function () {
                        vm.item = data;

                        //console.log(vm.item);
                    }
                    );
                }

                function _skipAbout() {
                    vm.item.personAbout = "";
                }

                function _skipEd() {
                    vm.item.school.length = 2;
                }

                function _skipWork() {
                    vm.item.company.length = 2;
                }

                function _skipSkills() {
                    vm.item.skills.length = 2;
                }

                function _editPerson() {
                    window.location.href = '/peopleng/' + sabio.page.personId;
                }

                function _editAbout() {
                    window.location.href = '/aboutme/create';
                }

                function _addWorkHistory() {
                    window.location.href = '/workhistoryng/create'
                }

                function _addEducation() {
                    window.location.href = '/educationng/create'
                }

                function _addSkills() {
                    window.location.href = '/skilltagng/manage'
                }

                function _searchUser() {
                    if (vm.searchQuery != null) {
                        vm.$userService.userSearchUser(vm.searchQuery, sabio.page.personId, _getSearchSuccess);
                    }
                    else {
                        $toastr.error("You didn't search anyone.");
                    }
                }
                function _getSearchSuccess() {
                    self.location = "/ProfilePageNg/" + vm.searchQuery + "/Search"
                }
            }

        })();

        // LANDING SERVICE FACTORY
        (function () {
            "use strict";

            angular.module('sabioApp')
            .factory('$landingService', LandingServiceFactory);

            LandingServiceFactory.$inject = ['$baseService', '$sabio'];

            function LandingServiceFactory($baseService, $sabio) {
                var aSabioServiceObject = sabio.services.landing;

                var newService = $baseService.merge(true, {}, aSabioServiceObject, $baseService);

                return newService;
            }

        })();

        sabio.services.landing = sabio.services.landing || {};

        //Get profile
        sabio.services.landing.getByPersonId = function (personId, onSuccess, onError) {
            sabio.page.sendAjax("profile/home/" + personId, sabio.page.ajaxType.GET, null, onSuccess)
        }

    </script>

